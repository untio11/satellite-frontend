{
    "name": "satellite-frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test",
        "eject": "react-app-rewired eject",
        "lint:all": "npx prettier --check \"./src/**/*.{ts,tsx,js,json}\" && tslint --project ./tsconfig.json",
        "lint:js:fix": "npx prettier --write \"./src/**/*.{js,jsx,json}\"",
        "lint:less:fix": "stylelint \"./src/**/*.less\" --fix",
        "lint:ts:fix": "npx prettier --write \"./src/**/*.{ts,tsx}\" && tslint --fix  --project ./tsconfig.json",
        "lint:all:fix": "npx prettier --write \"./src/**/*.{ts,tsx,js,json}\" && tslint --fix --project ./tsconfig.json",
        "tslint-check": "tslint-config-prettier-check ./tslint.json"
    },
    "lint-staged": {
        "./src/**/*.{js,jsx,json}": [
            "yarn --silent lint:js:fix",
            "git add"
        ],
        "./src/**/*.{ts,tsx}": [
            "yarn --silent lint:ts:fix",
            "git add"
        ],
        "./src/**/*.{less}": [
            "yarn --silent lint:less:fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@satellite-earth/client": "^2.0.0",
        "@satellite-earth/core": "^2.0.0",
        "@satellite-earth/epoch": "^2.0.0",
        "@satellite-earth/publication": "^2.0.0",
        "@satellite-earth/torrent": "^2.0.0",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^12.8.1",
        "@types/react-redux": "^7.1.16",
        "@types/redux": "^3.6.0",
        "axios": "^0.21.1",
        "bencode": "^2.0.1",
        "create-torrent": "^4.5.0",
        "end-of-stream": "^1.4.4",
        "eth-sig-util": "^3.0.1",
        "ipfs-only-hash": "^2.0.1",
        "keccak256": "^1.0.2",
        "localforage": "^1.9.0",
        "pako": "^2.0.3",
        "parse-torrent": "^9.1.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-markdown": "^5.0.3",
        "react-redux": "^7.2.2",
        "react-scripts": "4.0.3",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "remark-gfm": "^1.0.0",
        "reselect": "^4.0.0",
        "sanitize-filename": "^1.6.3",
        "simple-sha1": "^3.1.0",
        "utf8": "^3.0.0",
        "web-vitals": "^1.1.0",
        "webtorrent": "^0.115.2"
    },
    "devDependencies": {
        "@types/react-dom": "^17.0.2",
        "@types/redux-thunk": "^2.1.0",
        "@types/webtorrent": "^0.109.0",
        "babel-plugin-import": "^1.13.0",
        "cross-env": "^7.0.2",
        "customize-cra": "^0.9.1",
        "husky": "^4.0.9",
        "less": "^3.10.3",
        "less-loader": "^5.0.0",
        "lint-staged": "^9.5.0",
        "node-fetch": "^2.6.1",
        "prettier": "1.19.1",
        "react-app-rewired": "^2.1.8",
        "stylelint": "^13.3.3",
        "stylelint-config-standard": "^20.0.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.1.0",
        "typescript": "^4.2.3"
    }
}
